                <hr>
            </div>

        </div>
    </div>
    <footer class="container-fluid text-center">
        <a href="{{ path('travel_client_contact_us') }}">Contact Us</a>
    </footer>
{% endblock %}



{% block javascripts %}
    <script> $(document).ready(function(){ console.log("Script working properly"); });
    </script>
    <script type="text/javascript" src="http://code.jquery.com/jquery-latest.min.js"></script>
    <script src="{{ asset('js/ctour.js') }}"></script>
{% endblock %}
