{% extends 'baseclient.html.twig' %}

{% block body %}
<div>
    <img src="http://thinkorangeblog.com/wp-content/uploads/2017/07/photo8-dolomites-anja-kallenbach-photo-workshop-adventures-1024x344.jpg" alt="W3Schools.com" width="1200" height="120">

</div>

<div class="container-fluid text-center">
    <div class="row content">
        <div align="left" class="col-sm-5 sidenav">
            <div align="center">
    <h1>See Your Order</h1>

    <table width="100%">
        <tbody>

            <tr>
                <th>Destination: </th>
                <td>{{ torder.travel }}</td>
            </tr>

            <tr>
                <th>Additional Tour: </th>
                <td>{{ torder.package }}</td>
            </tr>
            <tr>
                <th>Duration: </th>
                <td>{{ torder.duration }}</td>
            </tr>
            <tr>
                <th>Package: </th>
                <td>{{ torder.amount }}</td>
            </tr>
            <tr>
                <th>Comments</th>
                <td>{{ torder.comments }}</td>
            </tr>
            <tr>
                <th>Totalprice</th>
                <td>{{ torder.totalPrice }}</td>
            </tr>
        </tbody>
    </table>
    <ul>
        <li>
            <a href="{{ path('torder_edit', { 'id': torder.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
