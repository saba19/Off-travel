{% extends 'baseclient.html.twig' %}

{% block title %}
    Venture Option{% endblock %}

{% block body %}
    <div>
        <img src="http://thinkorangeblog.com/wp-content/uploads/2017/07/photo8-dolomites-anja-kallenbach-photo-workshop-adventures-1024x344.jpg" alt="W3Schools.com" width="1200" height="120">
    </div>
    <div class="container-fluid text-center">
    <div class="row content">
    <div align="left" class="col-sm-5 sidenav">
        <h2> {{ travel.description }}</h2>
        <table style="width:100%">
            <tbody>
            <tr>
                <th>Name</th>
                <td><b> {{ travel.name }}</td></b>
            </tr>
            <br>
            <tr>
                <th>Duration</th>
                <td> 7 days</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if travel.dateFrom %}{{ travel.dateFrom|date('Y-m-d') }}{% endif %}</td>
            </tr>
            </tbody>
        </table>
        <br>
        <p>Not sure about {{ travel.name }}? Try our other destinations..</p>
        <p>Fill in the form. We will contact you shortly </p>
        <div align="left">
            <label>
                {{ form_start (form) }}
                {{ form_widget (form) }}
                <input type="submit" value="Send" />
               {{ form_end (form) }}
                </label>
        </div>
    </div>
        <div class="col-sm-7 text-left">
            <h1>Order Now!</h1>
            <span  onload="count();"></span>
            <br>
                <img class="logo-icon" src="{{ asset('images/iran1.jpg') }}" width="500" height="200">
               <h3> <b> {{ travel.name }}</b></h3>
                {{ travel.Longdescription }}

        </div>
        <div class="image">
            <br>
            <button type="button" class="btn btn-primary">See more photos</button>
            <div class="col-md-4">

                    <img class="photos" src="{{ asset('images/14.jpg') }}" alt="Lights" style="width:100%">
                    <br>
                    <img class="photos" src="{{ asset('images/16.jpg') }}" alt="Lights" style="width:100%">

                            <p class="photos">Lorem ipsum...</p>





        {% endblock %}

        {% block javascripts %}
            <script> $(document).ready(function(){ console.log("Script working properly"); });
            </script>
            <script type="text/javascript" src="http://code.jquery.com/jquery-latest.min.js"></script>
            <script src="{{ asset('js/clientshow.js') }}"></script>
        {% endblock %}




