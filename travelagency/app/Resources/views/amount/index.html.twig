{% extends 'base.html.twig' %}

{% block body %}
    <h1>Amounts list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Price</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for amount in amounts %}
            <tr>
                <td><a href="{{ path('amount_show', { 'id': amount.id }) }}">{{ amount.id }}</a></td>
                <td>{{ amount.price }}</td>
                <td>{{ amount.type }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('amount_show', { 'id': amount.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('amount_edit', { 'id': amount.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('amount_new') }}">Create a new amount</a>
        </li>
    </ul>
{% endblock %}
