{% extends 'baseclient.html.twig' %}
{% block title %} All Adventures{% endblock %}
{% block body %}
    <div>
        
        <img class="logo-icon" src="{{ asset('images/iran2.jpg') }}"width="1200" height="120">
    </div>

    <div id="tours">
        <div class="row">
            <div class="col-md-4">
                <div class="thumbnail">
                    <h1>All Adventures</h1>
                    {% for travel in travels %}
                        <ul>
                            <li class="tour">
                                <h2><a href="{{ path('travel_clientshow', { 'id': travel.id }) }}">{{travel.name}}</a></h2>
                                <span class="details">{{ travel.description }}</span>
                                <span class="price">From {{ travel.priceFrom}} EUR </span>
                                <br>
                                <button type="button" class="btn btn-success">Book Now</button>
                            </li>


                        </ul>

                    {% endfor %}

                </div>



            </div>

            <div class="col-sm-7 text-left">
                <h1>Say Yes to new Adventures !</h1>
                <br>
                <br>
                <img src="https://media.gadventures.com/media-server/cache/cb/d5/cbd54b7cfa57c9da0d82a3b840155559.jpg" alt="W3Schools.com" width="700" height="300">
